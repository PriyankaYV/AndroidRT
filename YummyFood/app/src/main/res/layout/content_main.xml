<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="218dp"
        android:id="@+id/imchanging"
        android:src="@drawable/newbinh" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="italic|bold"
        android:textSize="10dp"
        android:text="DISCOVER AMAZING WAYS OF EXPLORING GOOD FOOD!"
        android:id="@+id/captionTextView"
        android:textColor="@color/white"
        android:background="@color/black"
        android:alpha="0.5"
        android:layout_above="@+id/recyclr"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="normal|bold"
        android:textSize="20dp"
        android:text="Hello Guest"
        android:textColor="@color/white"
        android:id="@+id/captionTitleView"
        android:background="@color/black"
        android:alpha="0.5"
        android:layout_above="@+id/captionTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recyclr"
        android:layout_below="@+id/imchanging">

    </android.support.v7.widget.RecyclerView>


