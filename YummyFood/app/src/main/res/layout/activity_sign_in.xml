<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignInActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/grey"
        android:paddingBottom="30dp"
        android:id="@+id/liner">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skip"
        android:text="Skip Login >"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:textColor="@color/colorPrimaryDark"/>

        <ImageView
            android:paddingTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/logos"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="5dp"/>

        <TextView
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FoodYummy"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold|normal"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

    <TextView

        android:paddingTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/liner"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textAppearance="?android:textAppearanceSmall"
        android:text="GoogleSignIn"
        android:id="@+id/status"
        android:paddingBottom="10dp"/>

    <Button
        android:layout_centerHorizontal="true"
        android:text="Instant Gmail Connect"
        android:id="@+id/sign_in_button"

        android:layout_width="match_parent"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignOutButton"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/sign_out_button"
        android:layout_alignRight="@+id/sign_in_button"
        android:layout_alignEnd="@+id/sign_in_button"
        android:layout_below="@+id/sign_in_button"
        android:layout_alignLeft="@+id/sign_in_button"
        android:layout_alignStart="@+id/sign_in_button" />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/disconnect_button"
        android:layout_alignRight="@+id/sign_out_button"
        android:layout_alignEnd="@+id/sign_out_button"
        android:layout_below="@+id/sign_out_button"
        android:layout_alignLeft="@+id/sign_out_button"
        android:layout_alignStart="@+id/sign_out_button" />
    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SignoutndDisconnect"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/sign_out_and_disconnect"
        android:layout_below="@+id/disconnect_button"/>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/newTv"
        android:layout_margin="5dp"
        android:gravity="center"
        android:background="@color/wallet_dim_foreground_holo_dark"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/sign_out_and_disconnect"/>
   <TextView
       android:layout_marginTop="30dp"
       android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="5dp"
       android:padding="10dp"
       android:gravity="center"

       android:background="@color/wallet_dim_foreground_holo_dark"
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/newer"
       android:textColor="@color/colorPrimaryDark"
       android:layout_below="@+id/newTv"/>

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/priv"
        android:layout_below="@id/newer"
        android:text="100% Privacy Protection.Promise!"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold|normal"/>

    <TextView
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/priv"
        android:text="By creating an account,you agree to FoodYummmy Terms of Service"
        android:textColor="@color/grey"
        android:textAppearance="?android:textAppearanceSmall"/>
    </LinearLayout>

</ScrollView>
